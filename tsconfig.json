{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
